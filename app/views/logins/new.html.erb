<body>
  
  <div id="login-banner">
    <div class="row full-width">
      <div class="header small-12 large-10 large-offset-2 columns">
        <strong class="logo"><a href="/">watch us build</a></strong>
      </div>
    
      <div class="login-header small-12 large-12 large-centerd columns">
        <span>Show us what you build.</span>
      </div>
    
      <div class="login-form small-12 large-12 columns">
        <!-- <% if @user %>
         Username or password incorrect
        <% end %> -->

        <%= form_tag logins_path do |f| %>
          <div class="field">
            <%= text_field_tag :email, nil, placeholder: "Email" %>
          </div>

          <div class-"field">
            <%= password_field_tag :password, nil, placeholder: "Password" %>
          </div>

          <div class="login-button">
            <%= submit_tag "Log In" %>
          </div>
        <% end %>
      </div>     
    </div>
  </div>
  
  <div class="login-overlay"></div>
  
  <div id="login-footer"> 
    <div class="row full-width">
      <div class="footer small-12 large-12 columns">
          <div>
            <span>DESIGN/BUILD/DEVELOP</span><br>
          </div> 
      </div> 
    </div> 
  </div>    

</body>
