<body>
  
  <div id="login-banner">
    <div class="row full-width">
      <div class="overlay"></div>
      
      <div class="header small-12 large-10 large-offset-2 columns">
        <strong class="logo"><a href="http://www.watchusbuild.com">watch us build</a></strong>
      </div>
      
      <div class="pg_header small-12 large-12 large-centerd columns">
        <span>Show us what you build.</span>
      </div>
      
      <div class="login-form small-12 large-12 columns">

          <!-- <% if @user %>
           Username or password incorrect
          <% end %> -->
  
          <%= form_tag logins_path do |f| %>
            <div id="email">
              <%= text_field_tag :email, nil, placeholder: "Email" %>
            </div>

            <div id-"password">
              <%= password_field_tag :password, nil, placeholder: "Password" %>
            </div>
  
            <div id="login">
              <%= submit_tag "Log In", :class => 'ctr_button' %>
            </div>
          <% end %>

      </div>
          
     </div>
   </div>
  </div>       

</body>
