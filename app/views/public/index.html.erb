<body>
  
  <div id="hp_banner" class="row full-width">
    <div class="hp_overlay">
      <% if !current_user %> 
      <div id="navigation" class="small-12 large-10 large-offset-3 columns">
        	
        <strong class="logo">
          <%= link_to :root do %>
            <%= image_tag "flipbook60.jpg" %>
          <% end %>
        </strong>
      
        <div class="social">
          <div id="fb-root"></div>
          <div id="social_icon1">
            <a href="#" class="facebook_icon"></a>
          </div>
          <div id="social_icon2">
            <a href="#" class="twitter_icon"></a>
          </div>
          <div id="social_icon3">
            <a href="#" class="tumblr_icon"></a>
          </div> 
          <div id="links">
              <%= link_to("Log In", :new_login) %>
          </div>      
        </div>
      </div>
      <% end %>
    
      <div id="name" class="small-12 large-9 large-offset-3 columns">
        <span>flip</span>book
      </div>

      <div id="tagline" class="small-12 large-9 large-offset-3 columns">
        share what you make
      </div>

      <div id="signup" class="small-12 large-9 large-offset-3 columns">
        Put one line form animation here.
      </div>
    </div>
  </div>
  
  <div id="hp_flipbks" class="row">
    <div id="discover" class="small-3 large-6 columns">
        <div id="public_fbs">
          <ul>
          <% @public_flipbks.each do |f| %>
            <li>
              <a href="<%= flipbk_path(f.id) %>">
                <img src="<%= f.photos.all.first.url %>" width="300" height="300"></img>
              </a>
            </li>
          <% end %>
          </ul>
        </div>
    </div>
  </div>  
  
  <div class="push"></div>

  <div id="hp_footer" class="row">
    <% if !current_user %>  
      <div id="footer" class="large-12 small-12 columns">
          <div id="foot_signup">
            <div id="foot_links" class="grid_4 push_8">
              <div class="foot_buttons">
                <div id="fb-root"></div>
                <div id="social_icon3">
                  <a href="#" class="tumblr_icon"></a>
                </div>
                <div id="social_icon2">
                  <a href="#" class="twitter_icon"></a>
                </div>
                <div id="social_icon1">
                  <a href="#" class="facebook_icon"></a>
                </div>
    
                <div id="flip_icon">
                  <%= link_to :root do %>
                    <%= image_tag "flipbook60.jpg" %>
                  <% end %>
                </div>
              </div>
            </div>
    
            <div id="signup">
              <button type="button" class="ctr_button">Sign Up</button>
            </div>
          </div>
        
          <div id="credits">
            © 2014 flipbook, Inc. • Proudly built on the Silicon Prairie • Terms of service • Privacy Policy
          </div>
      </div>
    <% end %>
  </div>
  
</body>


