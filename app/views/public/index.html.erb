<body>
  <div id="hp-banner">
    <div class="row full-width">
      <div class="hp-overlay"></div>
      
      <div class="header small-12 large-10 large-offset-2 columns">
        <strong class="logo"><a href="/">watch us build</a></strong>
      </div>
  
      <div class="hello-block small-12 large-10 large-offset-2 columns">
        <div class="tagline">
          We love to build.
        </div>
        
        <div class="who-we-are">
          <span>WATCH</span><br>
          <span>US</span><img src="assets/wub_icon.png"</img><br>
          <span>BUILD</span>
        </div>

        <div class="signup">
          <%= render partial: "form", locals: {user: @user} %>
        </div>
        
        <div class="pitch">
          Start a flipbook.<br> 
          Add new photos via Instagram.<br> 
          Let us watch you build.<br>
          And, please, watch us build too.<br>
          Design/build/develop!
        </div>
        
      </div>
    </div>
  </div>
  
  <div id="hp-flipbks"> 
    <div class="row full-width">
      <div class="discover small-12 large-12 columns">
          <div class="public-flipbks">
            <ul>
              <% @public_flipbks.each do |f| %>
                <li class="small-12 large-3 columns">
                  <a href="<%= flipbk_path(f.id) %>">
                    <img src="<%= f.photos.all.first.url %>" width="100%" height="100%"></img>
                  </a>
                </li>
              <% end %>
            </ul>
          </div>
      </div>
    </div>    
