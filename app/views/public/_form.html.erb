<section>
  <%= form_for user, :html => {:id => 'theForm', :class => "simform"} do |f| %>
		<div class="simform-inner">
			<ol class="questions">
				<li>
					<span><label for="q1">And, build with us. What's your name?</label></span>
          <%= f.text_field :name, :html => {:id => 'q1', :name => "q1"} %>
					
				</li>
				<li>
					<span><label for="q2">What's your email address?</label></span>
          <%= f.text_field :email, :html => {:id => 'q2', :name => "q2"} %>
					
				</li>
				<li>
					<span><label for="q3">Create a good password.</label></span>
          <%= f.password_field :password, :html => {:id => 'q3', :name => "q3"} %>
				  
				</li>
				<li>
					<span><label for="q4">One more time, type your password.</label></span>
          <%= f.password_field :password_confirmation, :html => {:id => 'q4', :name => "q4"} %>
					
				</li>
			</ol><!-- /questions -->
      <%= f.submit "Sign Up", :html => {:class => 'submit', :type => "submit"} %>
			
			<div class="controls">
				<button class="next"></button>
				<div class="progress"></div>
				<span class="number">
					<span class="number-current"></span>
					<span class="number-total"></span>
				</span>
				<span class="error-message"></span>
			</div><!-- /controls -->
		</div><!-- /simform-inner -->
		<span class="final-message"></span>
	<% end %><!-- /simform -->			
</section>
    
